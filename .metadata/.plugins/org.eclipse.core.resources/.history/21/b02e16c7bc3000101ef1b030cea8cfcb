package com;

import org.springframework.beans.factory.annotation.Value;
import org.springframework.stereotype.Service;
import org.springframework.util.StringUtils;
import org.springframework.web.multipart.MultipartFile;

import java.io.File;
import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.Paths;

@Service
public class FileStorageService {

    @Value("${file.upload-dir}")
    private String uploadDir;

    // Method to create a directory if not exists
    private void createDirectoryIfNeeded() throws IOException {
        Path path = Paths.get(uploadDir);
        if (!Files.exists(path)) {
            Files.createDirectories(path);
        }
    }

    // Method to store file locally
    public String storeFile(MultipartFile file) throws IOException {
        createDirectoryIfNeeded();
        
        // Get the filename and sanitize it
        String fileName = StringUtils.cleanPath(file.getOriginalFilename());
        
        // Create a path to save the file locally
        Path targetLocation = Paths.get(uploadDir).resolve(fileName);
        
        // Store the file locally
        Files.copy(file.getInputStream(), targetLocation);
        
        // Returning the file path locally stored
        return targetLocation.toString();
    }
}
