package com;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.annotation.Bean;
import org.springframework.web.bind.annotation.RestController;

import springfox.documentation.builders.RequestHandlerSelectors;
import springfox.documentation.service.ApiInfo;
import springfox.documentation.spi.DocumentationType;
import springfox.documentation.spring.web.plugins.Docket;
import springfox.documentation.swagger2.annotations.EnableSwagger2;

@SpringBootApplication
@RestController
@EnableSwagger2
public class NewPostmanApplication {

	public static void main(String[] args) {
		SpringApplication.run(NewPostmanApplication.class, args);
	}
	
	@Bean
    public Docket myApi() {
        return new Docket(DocumentationType.SWAGGER_2)
                .select()
                .apis(RequestHandlerSelectors.basePackage("com")) // Replace with your base package
                .build()
                .apiInfo(apiInfo());
    }

    private ApiInfo apiInfo() {
        return new ApiInfo(
                "21-spring-tue-sat-sun", // Title
                "Dummy REST API",        // Description
                "1",                     // Version
                "www.tos.com",           // Terms of Service URL
                "Vrunda_Choksi",         // Contact Name
                "Apache 2.0",            // License
                "www.apache.com"         // License URL
        );
    }

}
