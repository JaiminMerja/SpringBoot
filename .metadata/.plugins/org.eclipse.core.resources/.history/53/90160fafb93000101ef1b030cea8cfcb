import org.springframework.stereotype.Service;
import org.springframework.web.multipart.MultipartFile;

import java.io.IOException;
import java.nio.file.*;

@Service
public class FileStorageService {

    private final Path uploadDir = Paths.get("uploads");  // Directory where files will be stored

    // Method to store the file (image)
    public String storeFile(MultipartFile file) {
        try {
            // Create the upload directory if it doesn't exist
            if (!Files.exists(uploadDir)) {
                Files.createDirectories(uploadDir);
            }

            // Get the original file name
            String fileName = file.getOriginalFilename();

            // Ensure the file has a valid name (e.g., handling cases where filename is null)
            if (fileName == null) {
                throw new IllegalArgumentException("File name is missing");
            }

            // Resolve the file path to the upload directory
            Path filePath = uploadDir.resolve(fileName);

            // Copy the file to the specified location
            Files.copy(file.getInputStream(), filePath, StandardCopyOption.REPLACE_EXISTING);

            return fileName;  // Return the file name (can also return the full path if needed)
        } catch (IOException e) {
            throw new RuntimeException("Failed to store file", e);
        }
    }
}
